<html>
    {{>head}}
    <body>

        {{>header}}

        <main class="container">

            <h1 class="text-center my-sm-3">Articles</h1>

            <h2>All our articles for a better health</h2>

            <nav class="navbar navbar-expand-lg navbar-light">

                <div class="container-fluid">

                    <form method="post" action="/article" class="d-flex">
                        <input class="form-control me-2" type="search" id="searchBar" name="searchBar" placeholder="Search for a title">
                        <input class="btn btn-secondary" type="submit" value="Search">
                    </form>

                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link" href="/article">All</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/article/Nutrition">Nutrition</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/article/Fitness">Fitness</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/article/Lifestyle">Lifestyle</a>
                        </li>
                    </ul>

                </div>

            </nav>

            <hr>


            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
                {{#Articles}}
                    <div class="col">
                        <a href="/article/{{Category}}/{{_id}}" style="color: black;" >
                            <div class="card">
                                <img src="{{illustration}}" alt="{{title}}" class="card-image-top">
                                <div class="card-body">
                                    <h4 class="card-title">{{title}}</h4>
                                </div>
                            </div>
                        </a>
                    </div>
                {{/Articles}}

                {{^Articles}}
                    <h1>No article seems to match the criteria</h1>
                {{/Articles}}
            </div>


        </main>



    </body>
</html>