<html>
    {{>head}}
    <body>

        {{>header}}

        <main class="container">

            <div id="input">

                <h2 class="text-center my-sm-3">BMI Calculator</h2>

                <h4 class="text-center my-sm-3">The body mass index is an indicator to know if your weight is healthy or not</h4>

                {{#errors}}

                    <div class="alert alert-danger" role="alert">
                        {{msg}}
                    </div>
                {{/errors}}

                <form method="post" role="form">

                    <div class="row">
                        <div class="col-4 offset-md-4">
                            <div class="form-group">
                                <label for="weight">Weight (in kg): </label>
                                <input class="form-control" type="number" id="weight" name="weight" step="0.01" min="0"></input>
                            </div>

                            <div class="form-group">
                                <label for="height">Height (in m): </label>
                                <input class="form-control" type="number" id="height" name="height" step="0.01" min="0"></input>
                            </div>

                            <div class="row my-sm-2">
                                <div class="col text-center">
                                    <input class="btn btn-primary btn-lg" type="submit" value="Calculate"></input>
                                </div>
                            </div>


                        </div>
                    </div>
                    

                </form>

            </div>

            
        </main>



    </body>
</html>