                                            </form>
                                        </div>
                                        <div class="col-md-2">
                                            <a href="/update/{{_id}}" role="button" class="btn btn-outline-primary">Modify</a>
                                        </div>

                                    </div>
                                </li>

                            {{/lifestyle}}
                            {{^lifestyle}}
                                <p> No goal for this category yet</p>
                            {{/lifestyle}}
                        </ul>

                        <hr>

                        <div class="row my-sm-4">
                            <div class="col text-center">
                                <a class="btn btn-primary m-0 m-md-2" href="/profile/{{user}}/add" role="button">Add a new goal</a>
                                <a class="btn btn-secondary m-0 m-md-2" href="/profile/{{user}}/history" role="button">View achievements history</a>
                            </div>
                        </div>

                    </div>

                </div>

            </div>

        </main>



    </body>
</html>