<html>
    {{>head}}
    <body>

        {{>header}}

        <main class="container">

            <h1 class="text-center">Modify your goal</h1>

                {{#errors}}

                    <div class="alert alert-danger" role="alert">
                        {{msg}}
                    </div>
                {{/errors}}

                <form method="post" role="form">
                    <div class="row">
                        <div class="col-4 offset-md-4">
                            <div class="form-group my-sm-2">
                                <label for="description">Goal description</label>
                                <textarea id="description" name="description" class="form-control" required>{{old}}</textarea>
                            </div>

                            <div class="row my-sm-2">
                                <div class="col text-center">
                                    <input type="submit" value="Modify" class="btn btn-primary btn-lg">
                                </div>
                            </div>

                </form>


        
        </main>



    </body>
<html>